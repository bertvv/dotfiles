{
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[latex]": {
        "editor.formatOnPaste": false,
        "editor.suggestSelection": "recentlyUsedByPrefix",
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[shellscript]": {
        "editor.tabSize": 2,
        "files.eol": "\n"
    },
    "[yaml]": {
        "editor.quickSuggestions": {
            "comments": false,
            "other": true,
            "strings": true
        },
        "editor.tabSize": 2
    },
    "editor.columnSelection": false,
    "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        120
    ],
    "editor.tokenColorCustomizations": {
        // source: https://tex.stackexchange.com/questions/540880/vs-code-latex-workshop-how-to-enable-custom-highlighting
        "textMateRules": [
            {
                "scope": [
                    "support.function.be.latex",
                    "support.function.general.tex",
                    "support.function.textit.latex",
                    "support.function.texttt.latex",
                    "support.function.textbf.latex",
                    "support.function.textsc.latex",
                    "support.function.url.latex",
                    "support.function.footnote.latex"
                ],
                "settings": {
                    "foreground": "#0000FF"
                }
            },
            {
                "scope": [
                    "support.function.section.latex"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#b700ff"
                }
            },
            {
                "scope": [
                    "variable.parameter.function.latex",
                    "constant.other.reference.citation.latex"
                ],
                "settings": {
                    "foreground": "#67a4ad"
                }
            }
        ]
    },
    "editor.wordWrap": "wordWrapColumn",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 20000,
    "files.defaultLanguage": "${activeEditorLanguage}",
    "git.confirmSync": false,
    "keyboard.dispatch": "keyCode",
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.latex.autoBuild.interval": 30000,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav",
        "*.synctex.gz",
        "*.run.xml",
        "*.bcf",
        "*.xdv",
        "*.vrb",
        "_minted*"
    ],
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.magic.args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "--shell-escape",
        "%DOC%"
    ],
    "latex-workshop.latex.outDir": "%DIR%/out",
    "latex-workshop.latex.recipes": [

    
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "xelatex âžž biber âžž gloss âžž xelatexÃ—â€Š2",
            "tools": [
                "xelatex",
                "biber",
                "makeglossaries",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2pdf"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "args": [
                "-f",
                "-xelatex",
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "command": "latexmk",
            "env": {},
            "name": "latexmk"
        },
        {
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-excape",
                "-file-line-error",
                "-output-directory=%OUTDIR%",
                "%DOC%"
            ],
            "command": "xelatex",
            "env": {},
            "name": "xelatex"
        },
        {
            "args": [
                "--output-directory",
                "%OUTDIR%",
                "%DOCFILE%"
            ],
            "command": "biber",
            "env": {},
            "name": "biber"
        },
        {
            "args": [
                "-d",
                "%OUTDIR%",
                "%DOCFILE%"
            ],
            "command": "makeglossaries",
            "env": {},
            "name": "makeglossaries"
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "markdownlint.config": {
        "MD007": {
            "indent": 4
        },
        "MD013": false
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "search.mode": "newEditor",
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.inheritEnv": false,
    "workbench.colorTheme": "Default Light Modern",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "latex-workshop.linting.chktex.convertOutput.column.chktexrcTabSize": 2,
    "gitlens.defaultDateFormat": null,
    "gitlens.defaultTimeFormat": "H:mm",
    "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
    "editor.bracketPairColorization.enabled": true,
    "gitlens.hovers.currentLine.over": "line",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.intellisense.file.exclude": [
        "**/*.acn",
        "**/*.acr",
        "**/*.alg",
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.fdb_latexmk",
        "**/*.fls",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.idx",
        "**/*.ind",
        "**/*.ist",
        "**/*.lof",
        "**/*.log",
        "**/*.lot",
        "**/*.nav",
        "**/*.out",
        "**/*.run.xml",
        "**/*.snm",
        "**/*.synctex.gz",
        "**/*.toc",
        "**/*.vrb"
    ],
    "jupyter.kernels.filter": [],
    "latex-workshop.latex.watch.files.ignore": [
        "**/*.bbx",
        "**/*.bbl",
        "**/*.cbx",
        "**/*.cfg",
        "**/*.clo",
        "**/*.cnf",
        "**/*.def",
        "**/*.dfu",
        "**/*.enc",
        "**/*.fd",
        "**/*.fmt",
        "**/*.lbx",
        "**/*.map",
        "**/*.mkii",
        "**/*.pfb",
        "**/*.tfm",
        "**/*.vf",
        "**/*.code.tex",
        "**/*.sty",
        "**/texmf-{dist,var}/**",
        "**/Local/MiKTeX/**",
        "**/Local/Programs/MiKTeX/**",
        "**/Roaming/MiKTeX/**",
        "**/Program*/MiKTeX*/**",
        "**/.miktex/texmfs/**",
        "/var/cache/miktex-texmf/**",
        "/usr/local/share/miktex-texmf/**",
        "**/Library/Application Support/MiKTeX/texmfs/**",
        "/dev/null",
    ],
    "terminal.integrated.shellIntegration.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [
        "-wall",
        "-n22",
        "-n30",
        "-e16",
        "-q",
        "-n13",
        "-n46",
        "-n36"
    ],
    "markdown.validate.enabled": true,
    "window.restoreWindows": "none",
    "interactiveWindow.restore": true,
    "redhat.telemetry.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",
    "[python]": {
        "editor.wordWrapColumn": 120
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "yaml": false
    },
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "notebook.lineNumbers": "on",
}